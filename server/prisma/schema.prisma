// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  nome  String
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Aula {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  link        String
  date        DateTime
}

model Agendamento {
  id        Int      @id @default(autoincrement())
  content  String
  date      DateTime
  createdAt DateTime @default(now())
}
